.container{
    position:absolute;
    width:100%;
    height:100%;
    overflow-y:hidden;
    overflow-x:hidden;
}

.canvas1{
    position:absolute;
    z-index: 2;
    height:100%;
    width:100%;
}

.cover-view{
    color:#00B0CF;
    padding:15px;
    text-align:center;
    position:absolute;
    width:100%;
    bottom:50px;
}
.ShowToast {
    display: absolute;
    width: 70%;
    background: rgba(255, 255, 255, .5) !important;
    filter: drop-shadow(1px 1px 55px rgba(0, 0, 0, .25));
    -webkit-backdrop-filter: blur(10px);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    padding: 16px;
    margin:auto;
    border: 1px groove #EFEFEF;
    z-index: 100;
}
 .ShowToast .modelview {
    font-size: 14px;
    color: #000000;
    line-height: 2;
    text-align: justify;
    text-align-last: left;
    word-break: break-all;
}
 .ShowToast .modelview b {
    color: #FFFC00;
    text-shadow: 0px 1px 1px rgb(0 0 0 / 25%);
    font-weight: normal;
}

 .ShowToast button {
    -webkit-appearance: none;
    height: 36px;
    width: 94px;
    background: #FFFC00;
    outline: none;
    border: none;
    border-radius: 36px;
    cursor: pointer;
    font-size: 16px;
    font-weight: 600;
    color: #000000;
    
}